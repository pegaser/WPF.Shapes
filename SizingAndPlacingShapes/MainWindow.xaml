<Window x:Class="SizingAndPlacingShapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SizingAndPlacingShapes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Ellipse Fill="Yellow" Stroke="Blue" Stretch="Fill"></Ellipse>
        <Ellipse Grid.Column="1" Fill="Yellow" Stroke="Blue" Width="100" Stretch="Uniform"></Ellipse>
        <Ellipse Grid.Column="2" Fill="Yellow" Stroke="Blue" Width="100" Stretch="UniformToFill"></Ellipse>
        <Canvas Grid.Column="3">
            <Ellipse Fill="Yellow" Stroke="Blue" Canvas.Left="100" Canvas.Top="50"
            Width="100" Height="50"></Ellipse>
            <Rectangle Fill="Yellow" Stroke="Blue" Canvas.Left="30" Canvas.Top="40"
            Width="100" Height="50"></Rectangle>
        </Canvas>
    </Grid>
</Window>
