<Window x:Class="PixelSnapping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelSnapping"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <Line StrokeThickness="32" Stroke="DarkGray" X1="10" Y1="10" X2="400" Y2="10"></Line>
        <Line StrokeThickness="32" Stroke="DarkGray" SnapsToDevicePixels="True" X1="10" Y1="50" X2="400" Y2="50"></Line>
    </StackPanel>
    </Viewbox>
</Window>
